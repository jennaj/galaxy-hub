extends layout.pug

mixin renderNews()
    section.section-content
        +renderPageTitle
        if external_url
            p
                strong See 
                    a(href=external_url)
                        | (external) news items

        p.small #{moment(date).format("MMMM Do YYYY")}
        div !{ contents }

block content
    if toc
        div.col-md-9
            +renderNews
        div.col-md-3
            div#sidebar
                +renderToc(toc)
    else
        div.col-md-12
            +renderNews
